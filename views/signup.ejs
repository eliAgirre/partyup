<!DOCTYPE html>
<html>
  <% include header %>
  <link rel="stylesheet" href="/css/signup.css">
  </head>
  <body>
  	<div id="wrapper">
	  	<% include navbar %>
	  	<div id="background"></div>
	    <div class="container col-sm-12 col-md-12 contenedor">
	    	<% include alertsBootstrap %>
	    	<!--Signup-->
	    	<div class="col-sm-4 col-md-4 col-md-offset-4" style="margin-bottom:10px;">
	    		<h3><strong><%=title %></strong></h3>
	    	</div>
	    	<div class="col-sm-12 col-md-12">
		        <div class="col-sm-2 col-md-2 col-md-offset-4">
		          <a href="/login/facebook" id="btnFB" class="btn btn-lg btn-primary btn-block" style="margin-bottom:10px;">Facebook</a>
		    </div>
		    <!--<div class="col-sm-2 col-md-2">
		          <a href="#" class="btn btn-lg btn-danger btn-block">Google</a>
		        </div>
	      	</div>-->
	    	<div class="col-sm-4 col-md-4 col-md-offset-4">
	    		<!--<div class="login-or" style="margin-bottom:10px;">
			        <hr class="hr-or">
			        <span class="span-or">or</span>
			    </div>-->
	    		<form id="signupForm" name="signupForm" role="form" action="/signup" method="post" >
			        <div class="form-group">
						<label for="email">Email</label>
						<input type="email" class="form-control" id="email" name="email" placeholder="JoeSixpack@sixpacksrus.com">
			        </div>
			        <div class="form-group">
						<label for="username">Username</label>
						<input type="text" class="form-control" id="username" name="username" placeholder="JoeSixpack">
			        </div>
			        <div class="form-group">
						<label for="password">Password</label>
						<input type="password" class="form-control" id="password" name="password" placeholder="********">
			        </div>
			        <div class="form-group">
						<label for="password2">Re-Enter Password:</label>
						<input type="password" class="form-control" id="password2" name="password2" placeholder="********">
			        </div>
			        <div class="form-group">
			        	<div class="date">
			        		<label for="birthday">Date of birth</label>
		                    <input type="text" class="form-control" id="birthday" name="birthday" placeholder="DD/MM/YYYY" />
		                </div>
				    </div>
				    <div class="col-sm-12 col-md-12">
				        <button type="submit" class="btn btn btn-info col-sm-4 col-md-4" id="signupBtn" name="signupBtn"> Sign Up </button>
				        <div class="checkbox col-sm-8 col-md-8">
		                    <label><input type="checkbox" id="acceptTerms" name="acceptTerms" value="javascript" class="styled" /><strong> &nbsp;&nbsp;I accept the terms</strong></label>
	                	</div>
                	</div>
                	<div>
				        <p class="text-center">
		                  <a href="/signup" class="fliper-btn">Already have an account?</a>
		                </p>
	                </div>
	    		</form>
	    	</div>
	    	<% include footer %>
		</div><!-- container -->
	</div><!-- wrapper -->
    <% include scriptBootstrap %>
    <script src="/js/signup.js" type="text/javascript" ></script>
  </body>
</html>