<!DOCTYPE html>
<html>
  <% include header %>
  </head>
  <body>
  	<div id="wrapper">
	  	<% include navbar %>
	  	<div id="background"></div>
	    <div class="container col-sm-12 col-md-12 contenedor">
	    	<% include alertsBootstrap %>
	    	<!--Login-->
	    	<div class="col-sm-4 col-md-4 col-md-offset-4" style="margin-bottom:10px;">
	    		<h3>Please <strong><%=title %></strong>, or <a href="/signup">Sign Up</a></h3>
	    	</div>
	    	<div class="row">
		        <div class="col-sm-2 col-md-2 col-md-offset-4">
		          <a href="/login/facebook/callback" id="btnFB" class="btn btn-lg btn-primary btn-block" style="margin-bottom:10px;">Facebook</a>
		    </div>
		    <div class="col-sm-2 col-md-2">
		          <a href="/auth/google/callback" class="btn btn-lg btn-danger btn-block">Google</a>
		        </div>
	      	</div>
	      	<div class="col-sm-4 col-md-4 col-md-offset-4">
		      	<div class="login-or" style="margin-bottom:5px;">
			        <hr class="hr-or">
			    </div>
			    <form id="loginForm" name="loginForm" role="form" action="/login" method="post" >
			        <div class="form-group">
						<label for="inputEmail">Email</label>
						<div class="input-group">
							<span class="input-group-addon"><span class="glyphicons-envelope"></span></span>
							<input type="email" class="form-control" id="email" name="email" placeholder="JoeSixpack@sixpacksrus.com">
						</div>
			        </div>
			        <div class="form-group">
						<a class="pull-right" href="#">Forgot password?</a>
						<label for="inputPassword">Password</label>
						<div class="input-group">
							<span class="input-group-addon"><span class="glyphicons-lock"></span></span>
							<input type="password" class="form-control" id="password" name="password" placeholder="********">
						</div>
			        </div>
			        <div class="checkbox pull-right">
						<label><input type="checkbox">Remember me </label>
			        </div>
			        <button type="submit" class="btn btn btn-info" id="loginBtn" name="loginBtn"> Log In </button>
		      	</form>
		      </div>
	    	<% include footer %>
	    </div><!-- container -->
	</div><!-- wrapper -->
    <% include scriptBootstrap %>
    <script src="/js/login.js" type="text/javascript" ></script>
  </body>
</html>